<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wxdiary">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WxDiary">
        <activity android:name=".activity.byservice.EditActivityByService"></activity>
        <activity android:name=".activity.byservice.ReadWriteActivityByService" />
        <activity android:name=".activity.byservice.SelectActivityByService" />
        <activity android:name=".activity.ModeSelectActivity" />
        <activity android:name=".activity.bylitepal.EditActivity" />

        <service
            android:name=".service.MyIntentService"
            android:exported="false" />

        <activity android:name=".activity.byservice.SingleDiaryShowActivity" />
        <activity android:name=".activity.bylitepal.SelectActivity" />
        <activity android:name=".activity.bylitepal.readWrite" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>